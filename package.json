{
  "name": "steam-anti-spam-bot",
  "version": "0.0.1",
  "description": "Moderates a Steam Group deleting spam posts",
  "author": {
    "name": "Js41637",
    "email": "js41637@gmail.com",
    "url": "https://github.com/js41637"
  },
  "scripts": {
    "dev": "better-npm-run start-dev",
    "build": "better-npm-run build",
    "start": "better-npm-run start",
    "forever": "better-npm-run forever"
  },
  "betterScripts": {
    "start-dev": {
      "command": "node -r babel-register ./index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "babel src --out-dir build",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "node ./build/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "forever": {
      "command": "forever start -a -o out.log -e err.log -m 1 index.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/js41637/Steam-Anti-Spam-Bot.git"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "build/main.js",
  "license": "Beerware",
  "dependencies": {
    "async": "^2.1.4",
    "cheerio": "^0.22.0",
    "install": "^0.8.4",
    "moment": "^2.17.1",
    "request": "^2.79.0",
    "steam-user": "^3.15.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "better-npm-run": "0.0.13",
    "piping": "^1.0.0-rc.4"
  }
}
